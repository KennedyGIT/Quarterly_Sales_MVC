@using QuarterlySalesApp.Models.ViewModels
@{
    var current = ViewContext.RouteData.Values["controller"]?.ToString();
}




<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Quarterly Sales @ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet"
          href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
          integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf"
          crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet" />
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
    @RenderSection("scripts", false)
</head>
<body>
    <div class="container">
        <nav class="navbar navbar-expand-md navbar-dark bg-dark">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu"
                    aria-controls="menu" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="menu">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item @Nav.Active("Sale", current)">
                        <a class="nav-link" asp-action="Index" asp-controller="Sale" asp-area="">
                            <span class="fas fa-home"></span>&nbsp;Sales
                        </a>
                    </li>
                    <li class="nav-item @Nav.Active("Employee", current)">
                        <a class="nav-link" asp-action="List" asp-controller="Employee" asp-area="">
                            <span class="fas fa-book-open"></span>&nbsp;Employees
                        </a>
                    </li>
                </ul>
             
            </div>
        </nav>
    </div>
    <header class="jumbotron text-center">
            <a asp-action="Index" asp-controller="Sale">
                <img src="~/images/logo.png" class="img-fluid center-block" />
            </a>
     </header>
    <main>
        @if (TempData.Keys.Contains("message"))
        {
            <h4 class="bg-info text-center text-white p-2">@TempData["message"]</h4>
        }
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; @DateTime.Now.Year.ToString() - Quarterly Employee Sales by Kennedy Mbano - 8826852 - <a asp-area="" asp-controller="Sale" asp-action="List">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
